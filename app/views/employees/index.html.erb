<p style="color: green",id="notice"><%= notice %></p>

<h1 style="color: darkblue">Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee.each do |h| %>
      <tr>
        <td><%=h.name %></td>
        <td><%= link_to 'show', employee_path(h)%></td>
        <td><%= link_to 'edit', edit_employee_path(h)%></td>
        <td><%= link_to 'Destroy', employee_path(h),method: :destroy%></td>


    <% end %>
  </tbody>
</table>

