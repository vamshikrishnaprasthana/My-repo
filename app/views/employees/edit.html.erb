<% if @employee.errors.any? %>
<ul>
  <% @employee.errors.full_messages.each do |m| %>
  <%= m %>
  <% end %>
</ul>
<% end %>
<%= form_with(model: @employee,local: true) do |f| %>
  <p style="color:blue">
    <%= f.label :Name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
