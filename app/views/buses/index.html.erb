<h1>Buses#index</h1>
<p id="notice"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus.each do |h| %>
      <tr>
        <td><%=h.name %></td>
        <td><%=h.colour %></td>
        <td><%= link_to 'show', bus_path(h)%></td>
        <td><%= link_to 'edit', edit_bus_path(h)%></td>
        <td><%= link_to 'destroy', bus_path(h),method: :delete %></td>


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New bus', new_bus_path %>
