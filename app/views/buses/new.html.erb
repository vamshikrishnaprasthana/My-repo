<% if @bus.errors.any? %>
<ul>
  <% @bus.errors.full_messages.each do |m| %>
  <%= m %>
  <% end %>
</ul>
<% end %>
<%= form_with(model: @bus,local: true) do |f| %>
  <p>
    <%= f.label :Name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :colour %><br/>
    <%= f.text_field :colour %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
